# NextGen Trading Platform Environment Configuration
# COPY THIS FILE TO .env AND FILL IN YOUR ACTUAL VALUES
# SECURITY NOTICE: Never commit your actual .env file to version control

# Grafana
GRAFANA_URL=http://localhost:3000
GRAFANA_USER=your_grafana_user
GRAFANA_PASSWORD=your_grafana_password
TOKEN=your_grafana_token

# Loki (Log aggregation for Grafana)
LOKI_URL=http://loki:3100

# Prometheus Metrics
PROMETHEUS_METRICS_PORT=8010

# Monitoring/Environment
ENVIRONMENT=development
SERVICE_VERSION=1.0.0

# InfluxDB (Time-series Database)
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_TOKEN=your_influxdb_token
INFLUXDB_ORG=your_org
INFLUXDB_USER_ID=your_user_id
INFLUXDB_ORG_ID=your_org_id
INFLUXDB_USER_NAME=your_username
INFLUXDB_PASSWORD=your_password
INFLUXDB_BUCKET=market_data

# Alpaca
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_SECRET_KEY=your_alpaca_secret_key

# Polygon
POLYGON_API_KEY=your_polygon_api_key

# Unusual Whales
UNUSUAL_WHALES_API_KEY=your_unusual_whales_api_key

# Yahoo Finance (if needed)
YAHOO_FINANCE_API_KEY=your_yahoo_finance_api_key

# NGROK
NGROK_AUTH_TOKEN=your_ngrok_auth_token
NGROK_API_KEY=your_ngrok_api_key

# GitHub
GITHUB_USERNAME=your_github_username
GITHUB_EMAIL=your_github_email
GITHUB_TOKEN=your_github_token

# Reddit
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USERNAME=your_reddit_username
REDDIT_PASSWORD=your_reddit_password
REDDIT_USER_AGENT=fingpt-trading-bot/1.0

# Redis connection settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_redis_password

# FinGPT Orchestrator Configuration
FINGPT_MODEL_PATH=gpt-4.1
FINGPT_MAX_TOKENS=1024
FINGPT_TEMPERATURE=0.1
FINGPT_CONTEXT_WINDOW_SIZE=4096
FINGPT_CACHE_TTL=300
FINGPT_CONFIDENCE_THRESHOLD=0.7

# FinGPT Risk Parameters
FINGPT_MAX_POSITION_SIZE=0.05
FINGPT_MAX_POSITIONS=10
FINGPT_MAX_TRADES_PER_DAY=20
FINGPT_MAX_TRADES_PER_TICKER=3
FINGPT_STOP_LOSS_PCT=0.02
FINGPT_TAKE_PROFIT_PCT=0.05

# FinGPT Execution Parameters
FINGPT_CLOSE_POSITIONS_EOD=true
FINGPT_EXECUTION_DELAY=0
FINGPT_EXECUTION_BATCH_SIZE=5

# FinGPT Universe Parameters
FINGPT_MAX_UNIVERSE_SIZE=100
FINGPT_MIN_UNIVERSE_SIZE=20
FINGPT_MAX_ACTIVE_TICKERS=30
FINGPT_DEFAULT_MARKET_INDICES=SPY,QQQ,IWM
FINGPT_DEFAULT_SECTORS=XLK,XLF,XLE,XLV,XLI,XLP,XLY,XLU,XLRE,XLB

# OpenAI API Configuration (for FinGPT)
OPENAI_API_KEY=your_openai_api_key
OPENAI_API_BASE=https://api.openai.com/v1
